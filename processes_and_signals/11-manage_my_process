#!/usr/bin/env bash
# This script manages the manage_my_process daemon

case "$1" in
    start)
        # Start the process and create PID file
        ./manage_my_process &
        PID=$!
        # Try to create PID file in /var/run, fallback to current directory if no permission
        if touch /var/run/my_process.pid 2>/dev/null; then
            echo $PID > /var/run/my_process.pid
        else
            echo $PID > ./my_process.pid
        fi
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process and remove PID file
        # Try /var/run first, then current directory
        if [ -f /var/run/my_process.pid ]; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            rm -f /var/run/my_process.pid
        elif [ -f ./my_process.pid ]; then
            kill "$(cat ./my_process.pid)" 2>/dev/null
            rm -f ./my_process.pid
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        # Stop then start the process
        # Stop part
        if [ -f /var/run/my_process.pid ]; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            rm -f /var/run/my_process.pid
        elif [ -f ./my_process.pid ]; then
            kill "$(cat ./my_process.pid)" 2>/dev/null
            rm -f ./my_process.pid
        fi
        
        # Start part
        ./manage_my_process &
        PID=$!
        # Try to create PID file in /var/run, fallback to current directory if no permission
        if touch /var/run/my_process.pid 2>/dev/null; then
            echo $PID > /var/run/my_process.pid
        else
            echo $PID > ./my_process.pid
        fi
        echo "manage_my_process restarted"
        ;;
    *)
        # Invalid argument
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
