#!/usr/bin/env bash
# This script manages the manage_my_process daemon

case "$1" in
    start)
        # Start the process and create PID file
        ./manage_my_process &
        PID=$!
        # Try to create PID file in /var/run
        if echo $PID > /var/run/my_process.pid 2>/dev/null; then
            echo "manage_my_process started"
        else
            # If no permission, create in /tmp and create symlink
            echo $PID > /tmp/my_process.pid
            # Try to create symlink to /var/run (this might also fail)
            ln -sf /tmp/my_process.pid /var/run/my_process.pid 2>/dev/null || true
            echo "manage_my_process started"
        fi
        ;;
    stop)
        # Stop the process and remove PID file
        # Try multiple locations for PID file
        if [ -f /var/run/my_process.pid ]; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            rm -f /var/run/my_process.pid
        fi
        # Also remove the actual file if it exists in /tmp
        if [ -f /tmp/my_process.pid ]; then
            kill "$(cat /tmp/my_process.pid)" 2>/dev/null
            rm -f /tmp/my_process.pid
        fi
        # Remove any broken symlinks
        rm -f /var/run/my_process.pid 2>/dev/null || true
        echo "manage_my_process stopped"
        ;;
    restart)
        # Stop then start the process
        # Stop part
        if [ -f /var/run/my_process.pid ]; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            rm -f /var/run/my_process.pid
        fi
        if [ -f /tmp/my_process.pid ]; then
            kill "$(cat /tmp/my_process.pid)" 2>/dev/null
            rm -f /tmp/my_process.pid
        fi
        rm -f /var/run/my_process.pid 2>/dev/null || true

        # Start part
        ./manage_my_process &
        PID=$!
        if echo $PID > /var/run/my_process.pid 2>/dev/null; then
            echo "manage_my_process restarted"
        else
            echo $PID > /tmp/my_process.pid
            ln -sf /tmp/my_process.pid /var/run/my_process.pid 2>/dev/null || true
            echo "manage_my_process restarted"
        fi
        ;;
    *)
        # Invalid argument
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
